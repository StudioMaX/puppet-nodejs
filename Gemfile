source 'https://rubygems.org'

puppetVersion = ENV.key?('PUPPET_VERSION') ? ENV['PUPPET_VERSION'] : '~> 6.0.0'

gem 'rake'
gem 'puppet', puppetVersion
gem 'puppet-lint'
gem 'puppet-syntax'
gem 'rspec-puppet'
gem 'puppetlabs_spec_helper'
gem 'iconv'
gem 'webmock'
gem 'puppet-blacksmith'
gem 'coveralls', require: false
